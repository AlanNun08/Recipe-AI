# Development Environment Variables
# For local development only - production values will be set in Google Cloud

# Database Configuration - Use local MongoDB for development
MONGO_URL="mongodb://localhost:27017"
DB_NAME="buildyoursmartcart_development"

# API Keys - Set these in Google Cloud Environment Variables for production
# These are placeholder values for local development
OPENAI_API_KEY="your-openai-api-key-here"
WALMART_CONSUMER_ID="your-walmart-consumer-id-here"
WALMART_KEY_VERSION="1"
WALMART_PRIVATE_KEY="your-walmart-private-key-here"

# Email Service Configuration
MAILJET_API_KEY="your-mailjet-api-key-here"
MAILJET_SECRET_KEY="your-mailjet-secret-key-here"
SENDER_EMAIL="your-sender-email@example.com"

# Other Configuration
STRIPE_API_KEY="your-stripe-api-key-here"
SECRET_KEY="your-secret-key-for-jwt"